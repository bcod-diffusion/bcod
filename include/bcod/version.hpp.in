#pragma once

#define BCOD_VERSION_MAJOR @PROJECT_VERSION_MAJOR@
#define BCOD_VERSION_MINOR @PROJECT_VERSION_MINOR@
#define BCOD_VERSION_PATCH @PROJECT_VERSION_PATCH@

#define BCOD_VERSION_STRING "@PROJECT_VERSION@"

#define BCOD_VERSION_CHECK(major, minor, patch) \
    (BCOD_VERSION_MAJOR > major || \
    (BCOD_VERSION_MAJOR == major && BCOD_VERSION_MINOR > minor) || \
    (BCOD_VERSION_MAJOR == major && BCOD_VERSION_MINOR == minor && BCOD_VERSION_PATCH >= patch)) 